{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "account/Routes": ["apps/account/src/app/remote-entry/entry.routes.ts"],
      "investment/Routes": [
        "apps/investment/src/app/remote-entry/entry.routes.ts"
      ],
      "mortgage/Routes": ["apps/mortgage/src/app/remote-entry/entry.routes.ts"],
      "payment/Routes": ["apps/payment/src/app/remote-entry/entry.routes.ts"],
      "pension/Routes": ["apps/pension/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
